@using AnimalDeCompagnieNoSuBlazor.Pages.Animal
@page "/animal/{id}"

<PageContainer Title="@(AnimalRawdata.Name)"
               Class="pageHeader">
    <Breadcrumb>
        <Breadcrumb>
            <BreadcrumbItem>主页</BreadcrumbItem>
            <BreadcrumbItem>信息墙</BreadcrumbItem>
            <BreadcrumbItem>详细信息</BreadcrumbItem>
        </Breadcrumb>
    </Breadcrumb>
    <Extra>
        <Button Type="primary" OnClick="GotoUpdateInfoPage">信息修改</Button>
    </Extra>
    <ExtraContent>
        <div class="moreInfo">
            <Statistic Title="疫苗状态" Value="@("已接种疫苗")" />
            <Statistic Title="生育状态" Value="@("已绝育")" />
        </div>
    </ExtraContent>
    <ChildContent>
        <Carousel Effect="@CarouselEffect.Fade" Autoplay="TimeSpan.FromSeconds(4)">
            @if (AnimalRawdata.Photoes != null && AnimalRawdata.Photoes.Count > 0)
            {
                @for (int i = 0; i < AnimalRawdata.Photoes.Count; i++)
                {
                    var photo = AnimalRawdata.Photoes[i];
                    <CarouselSlick>
                        <div class="image-display-center">
                            <img class="img" style="display:initial" alt="cat" src="@(photo)" />
                        </div>
                    </CarouselSlick>
                }
            }
        </Carousel>
    </ChildContent>
    <Content>

        <Descriptions Class="headerList" Bordered Column="@column">
            <DescriptionsItem Title="名字">@(AnimalRawdata.Name)</DescriptionsItem>
            <DescriptionsItem Title="识别号">@(AnimalRawdata.Idcard)</DescriptionsItem>
            <DescriptionsItem Title="种类">@(AnimalRawdata.Type)</DescriptionsItem>
            <DescriptionsItem Title="简介">@(AnimalRawdata.Photoes.Count)</DescriptionsItem>
        </Descriptions>
    </Content>
</PageContainer>

@code{

    private Dictionary<string, int> column = new Dictionary<string, int> {
            { "xxl", 3 },
            { "xl", 3},
            { "lg", 2},
            { "md", 2},
            { "sm", 1},
            { "xs", 1}
        };

}